<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= restaurantName %></title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('../layouts/main', { body: `
    <div class="container">
        <div class="page-header">
            <h1>${title}</h1>
            <a href="/api/inventory/warehouses/new" class="btn btn-primary">+ Nueva Bodega</a>
        </div>

        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Por Defecto</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (warehouses && warehouses.length > 0) { %>
                        <% warehouses.forEach(warehouse => { %>
                            <tr>
                                <td><%= warehouse.name %></td>
                                <td><%= warehouse.description %></td>
                                <td><%= warehouse.isDefault ? 'Sí' : 'No' %></td>
                                <td>
                                    <span class="status <%= warehouse.active ? 'status-active' : 'status-inactive' %>">
                                        <%= warehouse.active ? 'Activa' : 'Inactiva' %>
                                    </span>
                                </td>
                                <td class="actions">
                                    <a href="/api/inventory/warehouses/<%= warehouse._id %>/edit" class="btn btn-sm btn-secondary">Editar</a>
                                    <form action="/api/inventory/warehouses/<%= warehouse._id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('¿Está seguro de que desea eliminar esta bodega?');">
                                        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" class="text-center">No hay bodegas registradas.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
    ` }) %>
</body>
</html>